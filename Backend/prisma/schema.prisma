// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  name         String     @unique
  profileImage String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  chat         Chat[]
  chatRoom     ChatRoom[]
}

model ChatRoom {
  id        String   @id @default(uuid())
  title     String
  userId    String
  owner     User     @relation(fields: [userId], references: [id])
  chatId    String?
  lastChat  Chat?    @relation(fields: [chatId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatRoomChat {
  id    String @id
  chats Chat[]
}

model Chat {
  id           String       @id @default(uuid())
  content      String
  isImage      Boolean
  type         ChatType     @default(MESSAGE)
  userId       String
  user         User         @relation(fields: [userId], references: [id])
  chatRoomId   String
  chatRoomChat ChatRoomChat @relation(fields: [chatRoomId], references: [id])
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  chatRoom     ChatRoom[]
}

enum ChatType {
  WELCOME
  MESSAGE
  LEAVE
}
